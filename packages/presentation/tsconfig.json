{
  "extends": "./tsconfig.base",
  "compilerOptions": {
    "incremental": true,
    "noEmit": true,
    "strictNullChecks": true,
    "paths": {
      "@sanity/preview-url-secret": ["../preview-url-secret/src"],
      "@repo/channels": ["../channels/src"],
      "@repo/visual-editing-helpers": ["../visual-editing-helpers/src"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../channels/src",
    "../preview-url-secret/src",
    "../preview-url-secret/legacy",
    "../visual-editing-helpers/src"
  ],
  "exclude": ["dist", "node_modules"]
}
