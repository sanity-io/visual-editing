{
  "name": "@sanity/svelte-loader",
  "version": "1.11.22",
  "homepage": "https://github.com/sanity-io/visual-editing/tree/main/packages/svelte-loader#readme",
  "bugs": {
    "url": "https://github.com/sanity-io/visual-editing/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/sanity-io/visual-editing.git",
    "directory": "packages/svelte-loader"
  },
  "license": "MIT",
  "author": "Sanity.io <hello@sanity.io>",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "pkg build --strict --check --clean",
    "lint": "eslint .",
    "prepublishOnly": "pnpm build",
    "test": "vitest --pass-with-no-tests --typecheck",
    "watch": "pkg watch --strict"
  },
  "browserslist": "extends @sanity/browserslist-config",
  "prettier": "@sanity/prettier-config",
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "plugins": [
      "@typescript-eslint",
      "simple-import-sort",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "no-console": "error",
      "no-warning-comments": [
        "warn",
        {
          "location": "start",
          "terms": [
            "todo",
            "@todo",
            "fixme"
          ]
        }
      ],
      "@typescript-eslint/explicit-module-boundary-types": "error",
      "@typescript-eslint/member-delimiter-style": "off",
      "@typescript-eslint/no-empty-interface": "off",
      "@typescript-eslint/no-explicit-any": "warn",
      "prettier/prettier": "warn",
      "simple-import-sort/exports": "warn",
      "simple-import-sort/imports": "warn"
    },
    "root": true
  },
  "dependencies": {
    "@sanity/core-loader": "1.6.13",
    "fast-deep-equal": "3.1.3"
  },
  "devDependencies": {
    "@repo/channels": "0.4.0",
    "@repo/package.config": "workspace:*",
    "@repo/visual-editing-helpers": "0.6.11",
    "@sanity/client": "^6.18.1",
    "@sanity/pkg-utils": "6.8.15",
    "@sanity/preview-url-secret": "^1.6.12",
    "@sanity/visual-editing": "1.8.19",
    "@sveltejs/kit": "^2.5.8",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "rollup-plugin-svelte": "^7.2.0",
    "svelte": "^4.2.17",
    "typescript": "5.4.5",
    "vitest": "^1.6.0"
  },
  "peerDependencies": {
    "@sanity/client": "^6.18.1",
    "@sveltejs/kit": "2.x",
    "svelte": "4.x"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  }
}
