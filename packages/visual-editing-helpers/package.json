{
  "name": "visual-editing-helpers",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "author": "Sanity.io <hello@sanity.io>",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "source": "./src/index.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./csm": {
      "types": "./dist/csm.d.ts",
      "source": "./src/csm/index.ts",
      "import": "./dist/csm.js",
      "require": "./dist/csm.cjs",
      "default": "./dist/csm.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "source": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "csm": [
        "./dist/csm.d.ts"
      ]
    }
  },
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "pkg build --strict && pkg --strict",
    "lint": "eslint .",
    "prepublishOnly": "pnpm build",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "watch": "pkg watch --strict"
  },
  "browserslist": [
    "> 0.2% and last 2 versions and supports es6-module and supports es6-module-dynamic-import and not dead and not IE 11",
    "maintained node versions"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "plugins": ["prettier-plugin-packagejson"]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "plugins": [
      "@typescript-eslint",
      "react",
      "react-hooks",
      "simple-import-sort",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "no-console": "error",
      "no-warning-comments": [
        "warn",
        {
          "location": "start",
          "terms": [
            "todo",
            "@todo",
            "fixme"
          ]
        }
      ],
      "@typescript-eslint/explicit-module-boundary-types": "error",
      "@typescript-eslint/member-delimiter-style": "off",
      "@typescript-eslint/no-empty-interface": "off",
      "prettier/prettier": "warn",
      "simple-import-sort/exports": "warn",
      "simple-import-sort/imports": "warn"
    },
    "root": true
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "@sanity/client": "^6.7.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "typescript": "^5.2.2",
    "valibot": "^0.20.0",
    "sanity": "3.18.2-pink-lizard.170",
    "@sanity/util": "3.18.2-pink-lizard.172",
    "vitest": "^0.34.6"
  },
  "peerDependencies": {
    "@sanity/client": "6.7.1-pink-lizard.0",
    "valibot": "^0.20.0"
  },
  "peerDependenciesMeta": {
    "valibot": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18"
  }
}
