{
  "extends": "./tsconfig.base",
  "compilerOptions": {
    "paths": {
      "@sanity/core-loader": ["../core-loader/src"],
      "@repo/visual-editing-helpers": ["../visual-editing-helpers/src"],
      "@repo/visual-editing-helpers/*": ["../visual-editing-helpers/src/*"]
