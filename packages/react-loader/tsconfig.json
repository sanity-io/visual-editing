{
  "extends": "./tsconfig.base",
  "compilerOptions": {
    "incremental": true,
    "noEmit": true,
    "strictNullChecks": true,
    "paths": {
      "@sanity/core-loader": ["../core-loader/src"],
      "visual-editing-helpers": ["../visual-editing-helpers/src"],
      "visual-editing-helpers/*": ["../visual-editing-helpers/src/*"],
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "../core-loader/src", "../visual-editing-helpers/src"],
  "exclude": ["dist", "node_modules"]
}
