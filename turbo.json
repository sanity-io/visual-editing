{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": [".npmrc", ".prettierrc.cjs", "**/.env.*local"],
  "tasks": {
    "build": {
      "env": ["GITHUB_ACTIONS", "NODE_ENV", "VERCEL_BRANCH_URL", "NEXT_PUBLIC_VERCEL_URL"],
      "outputs": [".svelte-kit/**", "dist/**", "dist-svelte/**"],
      "dependsOn": ["@sanity/insert-menu#build", "^build"]
    },
    "test": {
      "env": ["GITHUB_ACTIONS"],
      "dependsOn": ["^build"],
      "cache": false
    },
    "lint": {
      "outputLogs": "errors-only"
    },
    "preview": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
