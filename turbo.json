{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["RUNNER_OS"],
  "pipeline": {
    "build": {
      "outputs": ["dist/**"],
      "dependsOn": ["^build"]
    },
    "test": {
      "env": ["GITHUB_ACTIONS"],
      "dependsOn": ["^build"],
      "cache": false
    },
    "lint": {},
    "artifact": {"dependsOn": ["^build"], "outputs": ["artifact/*.tgz"]},
    "typecheck": {
      "env": ["GITHUB_ACTIONS"],
      "dependsOn": ["^build"]
    },
    "preview": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "watch": {
      "persistent": true
    }
  }
}
